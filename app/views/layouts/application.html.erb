<!DOCTYPE html>
<html>
  <head>
    <title>JP Noticias</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand active" href="/">JP Noticias</a>
      </div>
      <ul class="nav navbar-nav">
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in?%>
          <%if try(:current_user).try(:admin?)%>
            <li>
              <a href="<%='/noticia'%>">
              <span class="glyphicon glyphicon-scale"></span>
              <%="Administrar Noticias"%></a>
            </li>
          <%end%>
          <li>
            <a>
            <span class="glyphicon glyphicon-user"></span>
            <%=current_user.email%></a>
          </li>
          <li>
            <a data-method="delete" href="<%= destroy_user_session_path %>">
            <span class="glyphicon glyphicon-log-out"></span> Logout</a>
          </li>
        <%else%>
          <li><a href="<%=new_user_registration_path%>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li>
            <a href="<%= user_session_path %>">
            <span class="glyphicon glyphicon-log-in"></span> Log in</a>
          </li>
        <%end%>
      </ul>
    </div>
  </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="container " style="background-color:#E6E6FA">
    <%= yield %>
    </div>
